// Sass configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Works for automation: node-sass --watch --recursive --output theme/static/css --source-map-contents theme/static/scss
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "node-sass ./theme/static/css/style.scss ./theme/static/css/style.css",
            "group": "build",
        }
    ]
}